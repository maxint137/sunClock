{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "lib": ["DOM", "ESNext"],
    "outDir": "./out",
    "rootDir": "./src",
    "strict": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "paths": {
      "*": ["./node_modules/@types/*"]
    }
  }

  //"include": ["src"]
  // "exclude": ["node_modules", "**/*.test.ts"]
}
