{
    "version": "0.1.0",
    "command": "gulp",
    "isShellCommand": true,
    "tasks": [{
            "taskName": "default",
            "isBuildCommand": true,
            "showOutput": "always",
            "isBackground": true
        },
        {
            "taskName": "sass",
            "isBuildCommand": true,
            "showOutput": "always",
            "isBackground": true
        },
        {
            // See https://go.microsoft.com/fwlink/?LinkId=733558
            // for the documentation about the tasks.json format
            "taskName": "TypeScript Transpilation",
            "command": "tsc",
            "isShellCommand": true,
            "args": ["-p", "."],
            "showOutput": "silent",
            "isBuildCommand": true,
            "problemMatcher": "$tsc"
        }
    ]
}